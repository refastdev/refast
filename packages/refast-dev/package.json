{
  "name": "@refastdev/refast-dev",
  "version": "0.0.3",
  "description": "refast dev toolkit",
  "main": "dist/index.js",
  "types": "./dist/src/index.d.ts",
  "license": "MIT",
  "bin": {
    "refast-dev": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "base-tsconfig.json",
    "eslint-config.js"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/refastdev/refast"
  },
  "homepage": "https://github.com/refastdev/refast#readme",
  "bugs": "https://github.com/refastdev/refast/issues",
  "authors": [
    "luoluoqixi <luoqixi@luoqixi.com> (https://github.com/luoluoqixi)"
  ],
  "keywords": [
    "refast",
    "refast-dev",
    "react"
  ],
  "dependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@vitejs/plugin-legacy": "^5.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-deepmerge": "^7.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vconsole": "^2.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "prettier": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-sort-json": "^3.1.0"
  },
  "scripts": {
    "build": "pnpm run lint && vite build",
    "dev": "vite build && node ./dist/index.js",
    "lint": "npx eslint bin test",
    "test": "vitest run index.test.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm run build",
    "release": "npm publish"
  },
  "packageManager": "pnpm@8.9.0"
}
